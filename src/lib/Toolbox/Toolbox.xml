<xml>
    <category name="Events" colour="#FFBF00">
        <block type="events_interval" />
        <block type="events_timeout" />
    </category>
    <category name="Control" colour="#FFAB19">
        <block type="control_wait" />
        <block type="control_waituntil" />
        <sep gap="48"></sep>
        <block type="control_repeat" />
        <sep gap="48"></sep>
        <block type="control_ifthen" />
        <block type="control_ifthenelse" />
        <block type="control_ifthenreturn" />
        <sep gap="48"></sep>
        <block type="control_switch" />
        <block type="control_case" />
        <block type="control_default" />
        <block type="control_break" />
    </category>
    <category name="Sound" colour="#CF63CF">
        <block type="sound_startsound" />
    </category>
    <category name="Sensing" colour="#5CB1D6">
        <block type="sensing_alert" />
        <block type="sensing_prompt" />
        <block type="sensing_confirm" />
        <sep gap="48"></sep>
        <block type="sensing_time" />
        <block type="sensing_year" />
        <block type="sensing_leapyear" />
    </category>
    <category name="Literals" colour="#59C08E">
        <block type="literals_true" />
        <block type="literals_false" />
        <block type="literals_number" />
        <block type="literals_string" />
        <block type="literals_color" />
        <block type="literals_array" />
        <block type="literals_arraylength" />
    </category>
    <category name="Operators" colour="#59C059">
        <block type="operators_equals" />
        <block type="operators_strictequals" />
        <block type="operators_more" />
        <block type="operators_less" />
        <sep gap="48"></sep>
        <block type="operators_and" />
        <block type="operators_or" />
        <block type="operators_not" />
        <sep gap="48"></sep>
        <block type="operators_add" />
        <block type="operators_minus" />
        <block type="operators_multiply" />
        <block type="operators_divide" />
        <block type="operators_power" />
        <sep gap="48"></sep>
        <block type="operators_log" />
        <block type="operators_root" />
        <block type="operators_adv" />
        <sep gap="48"></sep>
        <block type="operators_randomint" />
        <sep gap="48"></sep>
        <block type="operators_join" />
        <block type="operators_letter" />
    </category>
    <category name="Variables" colour="#FF8C1A">
        <block type="variable_set" />
        <block type="variable_get" />
    </category>
    <category name="Arrays" colour="#FF661A">
        <block type="json_arrayinsert" />
        <block type="json_arrayset" />
        <block type="json_arraymerge" />
        <sep gap="48"></sep>
        <block type="json_arrayget" />
        <block type="json_arraylength" />
    </category>
    <sep></sep>
    <category name="Functions" colour="#5531D6">
        <block type="functions_create">
            <statement name="FUNC">
                <block type="functions_return" />
            </statement>
        </block>
        <block type="functions_inline">
            <statement name="FUNC">
                <block type="functions_return" />
            </statement>
        </block>
        <sep gap="48"></sep>
        <block type="functions_return" />
        <sep gap="48"></sep>
        <block type="functions_call" />
        <block type="functions_callreporter" />
    </category>
    <category name="Technical" colour="#666666">
        <block type="debug_log" />
        <sep gap="48"></sep>
        <block type="debug_rawblock" />
        <block type="debug_raw" />
        <sep gap="48"></sep>
        <block type="debug_comment" />
